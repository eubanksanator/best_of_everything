<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Dish #<%= @dish.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @dish.name %></dd>

              <dt>Cuisine</dt>
              <dd><%= @dish.cuisine.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to dishes_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_dish_url(@dish.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to dish_url(@dish.id), :method => "delete", :data => { :confirm => "Do you really want to delete this dish?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>

        <%= form_tag favorites_url, :method => "post", :class => "form-horizontal" do %>
          <!-- Label and input for user_id -->
          <input type="hidden" name="user_id" value="<%= current_user.id %>">

          <!-- Label and input for dish_id -->

          <input type="hidden" name="dish_id" value="<%= @dish.id %>">


          <!-- Label and input for venue_id -->
          <div class="form-group">
            <label for="venue_id" class="col-sm-2 control-label">
              Venue
            </label>
            <div class="col-sm-10">
              <%= select_tag :venue_id, options_from_collection_for_select(Venue.order(:name), :id, :name), :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for notes -->
          <div class="form-group">
            <label for="notes" class="col-sm-2 control-label">
              Notes
            </label>
            <div class="col-sm-10">
              <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Favorite" class="btn btn-success">
              or
              <a href="/favorites">Cancel</a>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
